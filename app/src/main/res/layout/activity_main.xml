<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:id="@+id/main_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_tool_bar_title"
                    android:layout_width="0dp"
                    tools:text="ZumePizza"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:padding="@dimen/padding_normal_size"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_normal_size"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/action_bar_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/shopping_cart"
                    android:drawablePadding="@dimen/padding_normal_size"
                    android:paddingEnd="@dimen/padding_normal_size"
                    android:text="0" />
            </LinearLayout>

        </Toolbar>

        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</layout>